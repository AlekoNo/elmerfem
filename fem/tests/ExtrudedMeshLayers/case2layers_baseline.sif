! A simple 3D (extruded 2D) steady-state structured mesh mapping example
! for 2 body extrusion
! Test case authors: Thomas Zwinger/Peter Råback/Juha Ruokolainen
! Test case created: 2017/02/16

Header
  CHECK KEYWORDS Warn
  Mesh DB "." "square"
  Include Path ""
  Results Directory ""
End

Simulation
  Max Output Level = 9
  Extruded Mesh Levels(2) = 5 3
  !Extruded Mesh Name = String "twolayers"
  Coordinate System = "Cartesian"
  Coordinate Mapping(3) = 1 2 3
  Simulation Type = "Steady State"
  Steady State Max Iterations = 1
  Output Intervals = 0
  !Post File = "case2layers_baseline_.vtu"  
  Preserve Baseline = Logical True
End

Constants
  Gravity(4) = 0 -1 0 9.82
  Stefan Boltzmann = 5.67e-08
End

Body 1
  Name = "Body1"
  Body Force = 1
  Equation = 1
  Material = 1
End

Body 2
  Name = "Body2"
  Body Force = 2
  Equation = 1
  Material = 1
End

Equation 1
  Name = "Equation1"
  Heat Equation = True
End

Solver 1 
  !Exec Solver = Never
  Equation = "MapCoordinate"
  Procedure = "StructuredMeshMapper" "StructuredMeshMapper"
  Active Coordinate = Integer 3
End 

Solver 2
  !Exec Solver = Never
  Equation = "Heat Equation"
  Variable = "Temperature"
  Variable Dofs = 1
  Linear System Solver = "Iterative"
  Linear System Iterative Method = "BiCGStabl"
  BiCgStabl Polynomial Degree = 4
  Linear System Max Iterations = 500
  Linear System Convergence Tolerance = 1.0e-08
  Linear System Abort Not Converged = True
  Linear System Preconditioning = "none"
  Linear System Residual Output = 1
  Steady State Convergence Tolerance = 1.0e-05
  Nonlinear System Convergence Tolerance = 1.0e-05
  Nonlinear System Max Iterations = 1
  Nonlinear System Newton After Iterations = 3
  Nonlinear System Newton After Tolerance = 1.0e-02
  Nonlinear System Relaxation Factor = 1.0
  Reference Norm = Real 13.213506 
  Reference Norm Tolerance = Real 0.0001
End

Material 1
  Name = "Material1"
  Density = 1
  Heat Conductivity = 1
End

Body Force 1
  Name = "BodyForce1"
  Heat Source = 1
End
Body Force 2
  Name = "BodyForce1"
  Heat Source = -1
End

Boundary Condition 1
  Name = "Adiabatic lines low"
  Target Boundaries(2) = 1 3 
End

Boundary Condition 2
  Name = "warm lines low"
  Target Boundaries(2) = 2 4 
End


Boundary Condition 3
  Name = "Adiabatic sides low"
!  Target Boundaries(2) = 1 3 
End

Boundary Condition 4
  Name = "warm sides low"
!  Target Boundaries(2) = 2 4 
  Temperature = 10.0
End


Boundary Condition 5
  Name = "Cold sides up"
  Temperature = -5.0
End

Boundary Condition 6
  Name = "Adiabatic sides up"
End

Boundary Condition 7
  Name = "Bottom"
  !Target Boundaries = 9
  Bottom Surface = Variable "Coordinate"
     Real MATC "0.1*cos(pi*tx(0))*sin(pi*tx(1))"
  Temperature = 20
End

Boundary Condition 8
  Name = "Mid" 
  Mid Surface = Variable "Coordinate"
     Real MATC "1- 0.1*cos(pi*tx(1))*sin(pi*tx(0))"
End

Boundary Condition 9
  Name = "Top"
  !Target Boundaries = 10 
  Top Surface = Variable "Coordinate"
    Real MATC "2.0 + 0.1*sin(2*pi*tx(0))*cos(pi*tx(1))"
  Temperature = -20
End

